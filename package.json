{
  "name": "polyform-iac-assets",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:css": "tailwindcss -i ./assets/css/global.css -o ./static/css/style.css --watch",
    "build:css": "tailwindcss -i ./assets/css/global.css -o ./static/css/style.css --minify",
    "dev:js": "esbuild assets/js/*.js --bundle --outdir=static/js --watch",
    "dev:go": "air",
    "build:js": "esbuild assets/js/*.js --bundle --minify --outdir=static/js",
    "dev": "concurrently \"npm run dev:go\" \"npm run dev:css\" \"npm run dev:js\""
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "esbuild": "^0.24.2"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.13",
    "alpinejs": "^3.15.0",
    "htmx.org": "^2.0.7",
    "tailwindcss": "^4.1.13"
  }
}
