{
  "name": "polyform-iac",
  "version": "0.0.1",
  "description": "Frontend part of the Polyform IAC project.",
  "license": "MIT",
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "scripts": {
    "fmt": "prettier --write .",
    "build": "parcel build ./assets/scripts.js ./assets/styles.css --dist-dir ./static/dist",
    "dev": "parcel build ./assets/scripts.js ./assets/styles.css --dist-dir ./static/dist --no-optimize",
    "watch": "parcel watch ./assets/scripts.js ./assets/styles.css --dist-dir ./static/dist --no-optimize"
  },
  "dependencies": {
    "alpinejs": "latest",
    "htmx.org": "latest",
    "preline": "latest",
    "tailwindcss": "latest"
  },
  "devDependencies": {
    "@parcel/transformer-css": "latest",
    "@tailwindcss/forms": "latest",
    "@tailwindcss/postcss": "latest",
    "@tailwindcss/typography": "latest",
    "parcel": "latest",
    "postcss": "latest",
    "prettier": "latest"
  }
}
